<tr>
  <td><%= work_order.id %></td>
  <td><%= work_order.product&.name || "None Selected" %></td>
  <td><%= localize(work_order.updated_at, format: :terse) %></td>
  <td>
    <% if work_order.active? || work_order.closed? %>

      <%= link_to 'View', work_order_path(work_order), class: 'btn btn-default' %>

    <% else %>

      <%= link_to 'Continue', work_order_build_path(id: work_order.status, work_order_id: work_order.id), class: 'btn btn-primary', style: "margin-right: 10px" %>

      <%= link_to 'Cancel', work_order,
            method: :delete,
            class: 'btn btn-danger',
            data: { confirm: 'Are you sure you wish to cancel this work order?' } %>

    <% end %>
  </td>
</tr>
