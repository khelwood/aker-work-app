<%= render partial: 'plan_header' %>

<%= bootstrap_form_for work_plan, url: wizard_path, method: :put  do |f| %>

  <% enabled = work_plan.in_construction? %>

  <%= f.collection_radio_buttons(:data_release_strategy_id, get_data_release_strategies, :id,
    :name,
    disabled: !enabled,
    label: "These are the active Sequencescape studies that you follow, manage or created. Please select one to be used as the Data Release Strategy for this Work Plan:") %>

  <% content_for :title_button do %>
    <small class="pull-right" style="margin-top: 10px; color: white"><%= Rails.application.config.sequencescape_url %></small>
  <% end %>
  <%= render 'buttons', work_plan: work_plan, f: f %>

<% end %>
